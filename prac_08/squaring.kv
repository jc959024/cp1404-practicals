BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: input_number
            text: '7'
            font_size: 48
            multiline: False

        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                # Add functionality to handle_up in Python file
                on_press: app.handle_up()
            Button:
                text: 'Down'
                # Add functionality to handle_down in Python file
                on_press: app.handle_down()

    Button:
        text: 'Square'
        # the following line specifies the function in the app class to call when the button is pressed
        on_press: app.handle_calculate(input_number.text)

    Label:
        id: output_label
        font_size: 48
        color: (1, 0.75, 0.8, 1)

    Label:
        text: 'Enter a number and press "Square"'
        font_size: 20



